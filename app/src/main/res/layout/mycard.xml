<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#1F8795"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imagee"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#F3C7D6"
            android:padding="2dp"
            android:src="@drawable/ic_person_black_24dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/name"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="blah blah"
            android:layout_toEndOf="@+id/imagee"
/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/score"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/imagee"
            android:textStyle="bold"
            android:textColor="#E8AFC2"
            android:text="scoreyo"
            android:layout_marginLeft="40dp"

            />



    </RelativeLayout>



</androidx.cardview.widget.CardView>